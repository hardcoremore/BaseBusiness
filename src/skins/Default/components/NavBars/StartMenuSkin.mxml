<?xml version="1.0" encoding="utf-8"?>
<ui:SkinBase xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx"
		xmlns:Library="com.desktop.system.Application.Library.*" 
		xmlns:Button="com.desktop.ui.Components.Button.*"
		xmlns:ui="com.desktop.system.Application.Library.ui.*">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.desktop.ui.Components.NavBars.StartMenu")]
	</fx:Metadata>
	
	<s:Rect width="100%" height="100%">
		<s:fill>
			<s:SolidColor color="0xFFFFFF" />
		</s:fill>
		<s:stroke>
			<s:SolidColorStroke color="#00ccf0" weight="10" />
		</s:stroke>
	</s:Rect>
	
	<s:Group id="defaultContentGroup" minWidth="350" minHeight="400">
		
		<s:layout>
			<s:VerticalLayout paddingBottom="10" paddingLeft="10" paddingRight="10" paddingTop="10" />
		</s:layout>
		
		<s:Label text="Start Menu" fontSize="20" width="100%" textAlign="center"/>
		
		<s:Group width="100%" height="100%">
			
			<s:Group id="startMenuButtons" width="100%">
				<s:layout>
					<s:HorizontalLayout horizontalAlign="center" />
				</s:layout>
			</s:Group>
			
			<s:Group id="startMenuSystemGroup" width="100%" height="100%" bottom="5">
				<s:layout>
					<s:HorizontalLayout verticalAlign="bottom" horizontalAlign="center" paddingBottom="10"/>
				</s:layout>
				
				<Button:DesktopControllButton id="fullScreenButton" 
						  toolTip="{resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'fullScreen' )}"  
						  skinClass="{resourceManager.getClass( this.session.config.LOCALE_CONFIG.skinsResourceName, 'desktopButton', this.session.skinsLocaleName ) }" 
						  icon="{ resourceManager.getClass( this.session.config.LOCALE_CONFIG.systemIconsResourceName, 'fullScreenIcon', this.session.skinsLocaleName ) }"/>
				
				<Button:DesktopControllButton id="configButton" 
						  toolTip="{resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'settings' )}"  
						  skinClass="{resourceManager.getClass( this.session.config.LOCALE_CONFIG.skinsResourceName, 'desktopButton', this.session.skinsLocaleName ) }" 
						  icon="{ resourceManager.getClass( this.session.config.LOCALE_CONFIG.systemIconsResourceName, 'settingsIcon', this.session.skinsLocaleName ) }"/>
				
				<Button:DesktopControllButton id="lockButton" 
						  toolTip="{resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'lockProgram' )}"  
						  skinClass="{resourceManager.getClass( this.session.config.LOCALE_CONFIG.skinsResourceName, 'desktopButton', this.session.skinsLocaleName ) }"
						  icon="{ resourceManager.getClass( this.session.config.LOCALE_CONFIG.systemIconsResourceName, 'lockIcon', this.session.skinsLocaleName ) }"/>
				
				<Button:DesktopControllButton id="logOutButton" 
						  toolTip="{resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'logoff' )}" 
						  skinClass="{resourceManager.getClass( this.session.config.LOCALE_CONFIG.skinsResourceName, 'desktopButton', this.session.skinsLocaleName ) }"
						  icon="{ resourceManager.getClass( this.session.config.LOCALE_CONFIG.systemIconsResourceName, 'authenticateIcon', this.session.skinsLocaleName ) }"/>
				
			</s:Group>
			
		</s:Group>
		
		
	</s:Group>
	
</ui:SkinBase>
