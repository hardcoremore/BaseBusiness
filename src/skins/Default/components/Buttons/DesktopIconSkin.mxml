<!--- The default skin class for the Spark Button component.  

@see spark.components.Button

@langversion 3.0
@playerversion Flash 10
@playerversion AIR 1.5
@productversion Flex 4
-->
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" 
			 xmlns:fb="http://ns.adobe.com/flashbuilder/2009" 
			 minWidth="96" 
			 minHeight="96" 
			 alpha.disabled="0.5" 
			 xmlns:mx="library://ns.adobe.com/flex/mx">
	
	<fx:Metadata>[HostComponent("com.desktop.ui.Components.Button.Icon")]</fx:Metadata>
	
	<!-- host component -->
	<fx:Script fb:purpose="styling">
		<![CDATA[
			import spark.components.Image;
			import mx.events.FlexEvent;
			import spark.filters.GlowFilter;
			
			override protected function initializationComplete():void
			{
				useChromeColor = true;
				super.initializationComplete();
			}  
		]]>        
	</fx:Script>
	
	<!-- states -->
	<s:states>
		<s:State name="up"  />
		<s:State name="over" />
		<s:State name="active" />
		<s:State name="disabled" />
	</s:states>
	
	<s:Rect width="100%" height="100%" topLeftRadiusX="6" topLeftRadiusY="6"
			topRightRadiusX="6" topRightRadiusY="6"
			bottomLeftRadiusX="6" bottomLeftRadiusY="6"
			bottomRightRadiusX="6" bottomRightRadiusY="6">
		<s:fill>
			<s:SolidColor color="#FFFFFF" alpha=".3" />
		</s:fill>
		<s:stroke>
			<s:SolidColorStroke color="#FFFFFF" alpha="1" weight="1"/>
		</s:stroke>
	</s:Rect>
	
	<s:Group width="100%" height="100%">
		
		<s:layout>
			<s:VerticalLayout  gap="5" verticalAlign="middle" horizontalAlign="center" paddingRight="10" paddingLeft="10" paddingTop="10" paddingBottom="10"/>
		</s:layout>
		
		<s:Image id="icon"
				 y="2"
				 x="0"
				 left="10" 
				 right="10" 
				 top="10" 
				 bottom="10" 
				 height="{getStyle('iconWidth')}" 
				 width="{getStyle('iconHeight')}" 
				 smooth="true" smoothingQuality="high"/>
		
		<s:Spacer height="10" />
	
		<!-- layer 8: text -->
		<!--- @copy spark.components.supportClasses.ButtonBase#labelDisplay -->
		<s:Label id="labelDisplay"
				 textAlign="center"
				 verticalAlign="middle"
				 maxDisplayedLines="4"
				 fontSize="{ getStyle('iconWidth') / 6 } "
				 color="#FFFFFF"
				 filters="{[new GlowFilter(0, 1, 3.7, 3.7, 2.8, 1)]}"
				 minWidth="{icon.width}"
				 maxWidth="{icon.width}">
		</s:Label>
		
	</s:Group>
			 
</s:SparkSkin>
