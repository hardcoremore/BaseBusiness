<?xml version="1.0" encoding="utf-8"?>
<Library:SkinBase xmlns:fx="http://ns.adobe.com/mxml/2009"
				  xmlns:s="library://ns.adobe.com/flex/spark"
				  xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
				  alpha.disabled="0.5" 
				  xmlns:components="components.*" 
				  xmlns:Default="skins.Default.*" 
				  xmlns:Library="com.desktop.system.Application.Library.*" 
				  xmlns:mx="library://ns.adobe.com/flex/mx" 
				  xmlns:Button="com.desktop.ui.Components.Button.*" 
				  xmlns:Group="com.desktop.ui.Components.Group.*">
	
	<fx:Metadata>[HostComponent("interfaces.modules.IAssociates")]</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import spark.filters.GlowFilter;
		]]>
	</fx:Script>
	
	<Library:states>
		<s:State name="normal"/>
		<s:State name="disabled"/>
	</Library:states>
	
	<!--
	Note: setting the minimum size to 0 here so that changes to the host component's
	size will not be thwarted by this skin part's minimum size.   This is a compromise,
	more about it here: http://bugs.adobe.com/jira/browse/SDK-21143
	-->
	
	<s:Group id="contentGroup" minWidth="0" minHeight="0" top="0" bottom="0" left="0" right="0">
		
		<s:VGroup paddingBottom="20" paddingLeft="20" paddingTop="20" height="100%" width="100%">
			
			<s:HGroup id="topGroup">
				<Button:DesktopControllButton id="newAssociateButton"
											  toolTip="{resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'newAssociate' ) }"
											  icon="{resourceManager.getClass( 'systemIconClasses', 'addIcon', 'Default_skinClasses' ) }"
											  skinClass="{resourceManager.getClass( this.session.config.LOCALE_CONFIG.skinsResourceName, 'desktopButton', this.session.skinsLocaleName ) }"/>
				<Button:DesktopControllButton id="racuniButton"
											  toolTip="{resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'accounts' ) }"
											  icon="{resourceManager.getClass( this.session.config.LOCALE_CONFIG.systemIconsResourceName, 'bankAccountModuleIcon', this.session.skinsLocaleName ) }"
											  skinClass="{resourceManager.getClass( this.session.config.LOCALE_CONFIG.skinsResourceName, 'desktopButton', this.session.skinsLocaleName ) }"/>
				<Button:DesktopControllButton id="adreseButton"
											  toolTip="{resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'addresses' ) }"
											  icon="{resourceManager.getClass( this.session.config.LOCALE_CONFIG.systemIconsResourceName, 'addressIcon', this.session.skinsLocaleName ) }"
											  skinClass="{resourceManager.getClass( this.session.config.LOCALE_CONFIG.skinsResourceName, 'desktopButton', this.session.skinsLocaleName ) }"/>
				<components:QuickSearch id="quickSearch" 
										skinClass="{resourceManager.getClass( this.session.config.LOCALE_CONFIG.skinsResourceName, 'quickSearchComponent', this.session.skinsLocaleName ) }"/>
			</s:HGroup>
			
			<Library:HorizontalDivideBox id="mainContentGroup" 
										 verticalScrollPolicy="off"
										 horizontalScrollPolicy="off"
										 dividerColor="#006ec4"
										 dividerAlpha=".3"
										 dividerAffordance="11"
										 dividerThickness="11"
										 width="100%" height="100%"
										 dividerSkin="{resourceManager.getClass( this.session.config.LOCALE_CONFIG.systemIconsResourceName, 'divideBoxSkinIcon', this.session.skinsLocaleName ) }"
										 horizontalDividerCursor="{resourceManager.getClass( this.session.config.LOCALE_CONFIG.systemIconsResourceName, 'horizontalResizeCursor', this.session.skinsLocaleName ) }">
				
				
				<!-- DATA GRID AND PAGING -->
				<s:VGroup id="readContentGroup" paddingRight="16" width="75%" height="100%">
					
					<s:DataGrid width="100%" height="100%"
								id="associatesDataHolder"
								filters="{[new spark.filters.GlowFilter(0xCCCCCC, 1, 6, 6, 2, 2)]}"
								skinClass="spark.skins.spark.DataGridSkin">
						<s:columns>
							<s:ArrayList id="associatesColumns">
								
								<s:GridColumn dataField="associateId" headerText="Sifra" />
								<s:GridColumn dataField="associateName" headerText="Naziv Firme"/>
								<s:GridColumn dataField="telefon" headerText="Telefon"/>
								<s:GridColumn dataField="grad" headerText="Grad"/>
								<s:GridColumn dataField="adresa" headerText="Adresa"/>
								
							</s:ArrayList>
						</s:columns>
					</s:DataGrid>
										
					<s:Group id="bottomGroup" width="100%" minWidth="{associatesPaging.width + deleteAssociateButton.width}">
						
						<components:Paging id="associatesPaging" left="0" 
										   skinClass="{resourceManager.getClass( this.session.config.LOCALE_CONFIG.skinsResourceName, 'pagingComponent', this.session.skinsLocaleName ) }"/>
						<Button:DesktopControllButton id="deleteAssociateButton" 
													  right="0" 
													  toolTip="{resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'delete' ) }"
													  icon="{resourceManager.getClass( this.session.config.LOCALE_CONFIG.systemIconsResourceName, 'deleteErrorIcon', this.session.skinsLocaleName ) }"
													  skinClass="{resourceManager.getClass( this.session.config.LOCALE_CONFIG.skinsResourceName, 'desktopButton', this.session.skinsLocaleName ) }"/>
					</s:Group>
					
					<s:Spacer height="15"/>
					
				</s:VGroup>
				
				<Group:LoadingContainer id="updateAssociatesGroup"
										height="100%" width="25%"
										skinClass="{resourceManager.getClass( this.session.config.LOCALE_CONFIG.skinsResourceName, 'loadingContainer', this.session.skinsLocaleName ) }">
					
				</Group:LoadingContainer>
				
			</Library:HorizontalDivideBox>
			
			
			
		</s:VGroup>
		
	</s:Group>
	
</Library:SkinBase>
