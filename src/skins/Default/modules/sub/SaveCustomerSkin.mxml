<?xml version="1.0" encoding="utf-8"?>
<ui:SkinBase xmlns:fx="http://ns.adobe.com/mxml/2009" 
				  xmlns:s="library://ns.adobe.com/flex/spark" 
    			  xmlns:fb="http://ns.adobe.com/flashbuilder/2009" 
				  alpha.disabled="0.5"  
				  xmlns:Library="com.desktop.system.Application.Library.*" 
				  xmlns:Button="com.desktop.ui.Components.Button.*"
				  xmlns:ui="com.desktop.system.Application.Library.ui.*"
				  xmlns:Group="com.desktop.ui.Components.Group.*" 
				  xmlns:mx="library://ns.adobe.com/flex/mx" 
				  xmlns:app="components.app.*" >
	
	<fx:Metadata>[HostComponent("interfaces.modules.sub.ISaveCustomerModule")]</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import com.desktop.system.Application.Library.ui.FormHelper;
		]]>
	</fx:Script>
	
    <fx:Declarations>
		<s:RadioButtonGroup id="customer_tax_enabled" />
	</fx:Declarations>
	
    <ui:states>
        <s:State name="normal" />
        <s:State name="disabled" />
    </ui:states>
    
    <!--
        Note: setting the minimum size to 0 here so that changes to the host component's
        size will not be thwarted by this skin part's minimum size.   This is a compromise,
        more about it here: http://bugs.adobe.com/jira/browse/SDK-21143
    -->
    <!--- @copy spark.components.SkinnableContainer#contentGroup -->

	<s:Scroller id="scroller" top="0" left="0" bottom="0" right="0" skinClass="spark.skins.spark.ScrollerSkin">
		
		<s:Group id="contentGroup" minHeight="0" minWidth="0" top="0" bottom="0" left="0" right="0">
						
			<Group:ModuleNotification id="notifier" 
									  width="100%" height="100%"
									  minHeight="{ customerForm2.height }" minWidth="{ customerForm1.width + customerForm2.width }"
									  skinClass="skins.Default.components.Group.ModuleNotificationSkin">
				
			
				<Group:LoadingContainer id="loadingContainer" width="100%" height="100%" 
										skinClass="skins.Default.components.Group.LoadingContainerSkin">
					
					<s:VGroup width="100%" height="100%">
						
						<s:HGroup width="100%" height="100%">
							<s:Form id="customerForm1" skinClass="spark.skins.spark.FormSkin">
								
								<s:layout>
									<s:FormLayout gap="1"/>
								</s:layout>
								
								<s:FormItem  label="ID:" skinClass="spark.skins.spark.FormItemSkin" visible="false" height="0">
									<s:TextInput id="customer_id" skinClass="spark.skins.spark.TextInputSkin" width="250" />
								</s:FormItem>
								
								<s:FormItem  label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'code') }: " skinClass="spark.skins.spark.FormItemSkin">
									<s:TextInput id="customer_code" skinClass="spark.skins.spark.TextInputSkin" width="250" />
								</s:FormItem>
								
								<s:FormItem label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'type') }: " skinClass="spark.skins.spark.FormItemSkin">
									
									<s:CheckBox    id="customer_sales_type_buyer"
												   label="Kupac"
												   skinClass="spark.skins.spark.RadioButtonSkin" />
									
									<s:CheckBox    id="customer_sales_type_supplier"
												   label="Dobavljac" 
												   skinClass="spark.skins.spark.RadioButtonSkin" />
								</s:FormItem>
								
								<s:FormItem label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'taxEnabled') }: " skinClass="spark.skins.spark.FormItemSkin">
									
									<s:RadioButton id="poreskiObveznikDa"
												   label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'yes') }"
												   groupName="customer_tax_enabled"
												   value="1"
												   skinClass="spark.skins.spark.RadioButtonSkin" />
									<s:RadioButton id="poreskiObveznikNe"
												   label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'no') }"
												   groupName="customer_tax_enabled"
												   value="0"
												   skinClass="spark.skins.spark.RadioButtonSkin" />
									
								</s:FormItem>
								
								<s:FormItem label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'vatValue') }: " skinClass="spark.skins.spark.FormItemSkin">
									<s:TextInput id="customer_vat_value" skinClass="spark.skins.spark.TextInputSkin" width="250" />
								</s:FormItem>
								
								<s:FormItem label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'name') }: " skinClass="spark.skins.spark.FormItemSkin">
									<s:TextInput id="customer_name" skinClass="spark.skins.spark.TextInputSkin" width="250" />
								</s:FormItem>
								
								<s:FormItem label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'phone') }: " skinClass="spark.skins.spark.FormItemSkin">
									<s:TextInput id="customer_telephone" skinClass="spark.skins.spark.TextInputSkin" width="250" />
								</s:FormItem>
								
								<s:FormItem label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'phone') } 2: " skinClass="spark.skins.spark.FormItemSkin">
									<s:TextInput id="customer_telephone2" skinClass="spark.skins.spark.TextInputSkin" width="250" />
								</s:FormItem>
								
								<s:FormItem label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'mobile') }: " skinClass="spark.skins.spark.FormItemSkin">
									<s:TextInput id="customer_mobile" skinClass="spark.skins.spark.TextInputSkin" width="250" />
								</s:FormItem>
								
								<s:FormItem label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'mobile') } 2: " skinClass="spark.skins.spark.FormItemSkin">
									<s:TextInput id="customer_mobile2" skinClass="spark.skins.spark.TextInputSkin" width="250" />
								</s:FormItem>
								
								
								<s:FormItem label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'contactPerson') }: " skinClass="spark.skins.spark.FormItemSkin">
									<s:TextInput id="customer_contact_person" skinClass="spark.skins.spark.TextInputSkin" width="250" />
								</s:FormItem>
								
								<s:FormItem label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'country') }: " skinClass="spark.skins.spark.FormItemSkin">
									
									<s:ComboBox id="customer_country" skinClass="spark.skins.spark.ComboBoxSkin" width="250" requireSelection="true"
												labelToItemFunction="{FormHelper.disableLabelToItemFunction}">
									</s:ComboBox> 
									
								</s:FormItem>
								
								<s:FormItem label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'zipCode') }: " skinClass="spark.skins.spark.FormItemSkin">
									<s:TextInput id="customer_zip_code" skinClass="spark.skins.spark.TextInputSkin" width="250" />
								</s:FormItem>
								
							</s:Form>
							<s:Form id="customerForm2" skinClass="spark.skins.spark.FormSkin">
								
								<s:layout>
									<s:FormLayout gap="1"/>
								</s:layout>
								
								<s:FormItem label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'city') }: " skinClass="spark.skins.spark.FormItemSkin">
									<s:TextInput id="customer_city" skinClass="spark.skins.spark.TextInputSkin" width="250" />
								</s:FormItem>
								
								<s:FormItem label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'address') }: " skinClass="spark.skins.spark.FormItemSkin">
									<s:TextInput id="customer_address" skinClass="spark.skins.spark.TextInputSkin" width="250" />
								</s:FormItem>
								
								<s:FormItem label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'email') }: " skinClass="spark.skins.spark.FormItemSkin">
									<s:TextInput id="customer_email_address" skinClass="spark.skins.spark.TextInputSkin" width="250" />
								</s:FormItem>
								
								<s:FormItem label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'companyNumber') }: " skinClass="spark.skins.spark.FormItemSkin">
									<s:TextInput id="customer_company_number" skinClass="spark.skins.spark.TextInputSkin" width="250" />
								</s:FormItem>
								
								<s:FormItem label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'companyVatNumber') }: " skinClass="spark.skins.spark.FormItemSkin">
									<s:TextInput id="customer_company_vat_number" skinClass="spark.skins.spark.TextInputSkin" width="250" />
								</s:FormItem>
								
								<s:FormItem label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'companyTaxNumber') }: " skinClass="spark.skins.spark.FormItemSkin">
									<s:TextInput id="customer_company_tax_number" skinClass="spark.skins.spark.TextInputSkin" width="250" />
								</s:FormItem>
								
								<s:FormItem label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'customerSince') }: " skinClass="spark.skins.spark.FormItemSkin">
									<mx:DateField id="customer_since" width="250"/>
								</s:FormItem>
								
								<s:FormItem label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'note') }: " skinClass="spark.skins.spark.FormItemSkin">
									<s:TextArea id="customer_note" skinClass="spark.skins.spark.TextInputSkin" width="250" />
								</s:FormItem>
								
								<s:FormItem label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'bankAccount') }: " skinClass="spark.skins.spark.FormItemSkin">
									<s:TextInput id="customer_bank_account" skinClass="spark.skins.spark.TextInputSkin" width="250" />
								</s:FormItem>
								
								<s:FormItem label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'bankAccount') } 2: " skinClass="spark.skins.spark.FormItemSkin">
									<s:TextInput id="customer_bank_account2" skinClass="spark.skins.spark.TextInputSkin" width="250" />
								</s:FormItem>
								
								<s:FormItem label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'bankAccount') } 3: " skinClass="spark.skins.spark.FormItemSkin">
									<s:TextInput id="customer_bank_account3" skinClass="spark.skins.spark.TextInputSkin" width="250" />
								</s:FormItem>
								
								<s:FormItem label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'currency') }: " skinClass="spark.skins.spark.FormItemSkin">
									<s:ComboBox id="customer_currency" requireSelection="true" skinClass="spark.skins.spark.ComboBoxSkin" width="250" labelToItemFunction="{FormHelper.disableLabelToItemFunction}">
										<s:dataProvider>
											<s:ArrayCollection>
												<fx:Object value="rsd" label="RSD"/>
												<fx:Object value="eur" label="EUR"/>
												<fx:Object value="km" label="KM"/>
											</s:ArrayCollection>
										</s:dataProvider>
									</s:ComboBox>
								</s:FormItem>
								
								<s:FormItem label="{ resourceManager.getString( this.session.config.LOCALE_CONFIG.dictonaryResourceName, 'creditLimit') }: " skinClass="spark.skins.spark.FormItemSkin">
									<s:TextInput id="customer_credit_limit" skinClass="spark.skins.spark.TextInputSkin" width="250" />
								</s:FormItem>
								
								<s:FormItem skinClass="spark.skins.spark.FormItemSkin">
									<app:SaveData id="saveDataCmp" 
												  skinClass="{ resourceManager.getClass( this.session.config.LOCALE_CONFIG.skinsResourceName, 'saveDataComponent', this.session.skinsLocaleName )}" />
								</s:FormItem>
								
							</s:Form>
							
						</s:HGroup>
					</s:VGroup>
					
					
				</Group:LoadingContainer>
				
			</Group:ModuleNotification>
			
		</s:Group>
		
	</s:Scroller>
	
</ui:SkinBase>
